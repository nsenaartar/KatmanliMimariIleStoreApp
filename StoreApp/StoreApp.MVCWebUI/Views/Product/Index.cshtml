@model IEnumerable<StoreApp.Entity.Product>
@{
    ViewBag.Title = "Index";
}

<h3>Ürün Listesi</h3>

@if (TempData["Updated"] != null)
{
    string urun = TempData["Updated"].ToString();

    <div class="alert alert-success" role="alert">
        <span class="glyphicon glyphicon-ok"></span>
        <b> @urun </b> isminde kayıt güncellendi.
    </div>
}

<hr />
<a href="/Product/Create" class="btn btn-primary">
    <span class="glyphicon glyphicon-plus"></span>
    Kayıt Ekle
</a>
<hr />
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>isApproved</th>
            <th>isHome</th>
            <th>isFeatured</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    <img src="~/images/tn/@item.Image" width="120" />             
                </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    @if (item.isApproved)
                    {
                        <span class="label label-success">Onaylı</span>
                    }
                    else
                    {
                        <span class="label label-warning">Onay Bekliyor</span>
                    }
                </td>
                <td>
                    @if (item.isHome)
                    {
                        <span class="label label-success">Anasayfa</span>
                    }
                    else
                    {
                        <span class="label label-warning">Anasayfa Değil</span>
                    }
                </td>
                <td>
                    @if (item.isFeatured)
                    {
                        <span class="label label-success">Popüler</span>
                    }
                    else
                    {
                        <span class="label label-warning">Popüler Değil</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = @item.Id }, new { @class = "btn btn-primary btn-xs" })
                </td>
            </tr>
        }
    </tbody>
</table>
