@model IEnumerable<StoreApp.Entity.Product>


<div class="widget">
    <h4>Popüler Ürünler</h4>

    <div class="products-list">

        @foreach (var item in Model)
        {
            <div class="media">
                <a class="media-left" href="/Product/Details/@item.Id">
                    <img alt="" class="img-responsive product-thumb" src="~/images/tn/@item.Image">
                </a>
                <div class="media-body">
                    <a href="#" class="product-title">@item.Name</a>
                    <p class="product-price">@item.Price</p>
                </div>
            </div>
        }         

    </div>

</div>